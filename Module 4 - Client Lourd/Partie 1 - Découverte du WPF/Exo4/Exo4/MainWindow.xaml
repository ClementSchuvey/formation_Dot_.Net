<Window x:Class="Exo4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo4"
        mc:Ignorable="d"
        Title="Exo 4" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="center" VerticalAlignment="center">
            <!-- Label et champs de saisie du nom -->
            <Label Content="Saisir votre Nom:" FontSize="20"/>
            <TextBox Name="nameUser" FontSize="20" />
            <!-- Boutton qui active ma méthode ShowMessage au click -->
            <Button Content="Cliquez moi" FontSize="20" Click="ShowMessage" />
        </StackPanel>
    </Grid>
</Window>
