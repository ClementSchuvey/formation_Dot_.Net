<!--
    Pour changer le tritre de ma fenêtre je modifie l'attribut Title de ma balise Window
    Pour afficher un text je glisse/dépose un textBlock depuis la boîte à outils
    Et pour modifier son style je peut le faire depuis l'onglet propriétés
-->
    <Window x:Class="Exo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo1"
        mc:Ignorable="d"
        Title="Exercice 1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="myText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Je suis un message" VerticalAlignment="Center" Height="26" Width="210" FontSize="20">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>
</Window>
